<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="afzalshama.audiobookmark.BookmarkActivity"
    tools:showIn="@layout/activity_bookmark">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:id="@+id/optionsLinearLayout"
        android:orientation="horizontal"
        android:padding="20dp"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/note_image"
                android:id="@+id/button"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Note"
                android:textColor="#000000"
                android:id="@+id/note_tv"
                android:layout_gravity="bottom|center_horizontal"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/actionlist"
                android:id="@+id/button2"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Decision"
                android:textColor="#000000"
                android:id="@+id/decision_tv"
                android:layout_gravity="bottom|center_horizontal"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/decision1"
                android:id="@+id/button3"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Action"
                android:textColor="#000000"
                android:id="@+id/action_tv"
                android:layout_gravity="bottom|center_horizontal"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
